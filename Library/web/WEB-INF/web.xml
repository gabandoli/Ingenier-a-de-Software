<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>cl.duoc.library.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cl.duoc.library.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionEmpleadosServlet</servlet-name>
        <servlet-class>cl.duoc.library.servlet.GestionEmpleadosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionLibrosServlet</servlet-name>
        <servlet-class>cl.duoc.library.servlet.GestionLibrosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionProfesoresAlumnosServlet</servlet-name>
        <servlet-class>cl.duoc.library.servlet.GestionProfesoresAlumnosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrestamoServlet</servlet-name>
        <servlet-class>cl.duoc.library.servlet.PrestamoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionEmpleadosServlet</servlet-name>
        <url-pattern>/gestion-empleados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionLibrosServlet</servlet-name>
        <url-pattern>/gestion-libros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionProfesoresAlumnosServlet</servlet-name>
        <url-pattern>/gestion-profesores-alumnos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrestamoServlet</servlet-name>
        <url-pattern>/prestamo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>
